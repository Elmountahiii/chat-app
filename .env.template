# Database Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=password
MONGO_DB=chatapp

MONGODB_URI=MONGODB_URI


# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=your_jwt_secret

# Application URLs (Production/Traefik)
# Domain: chat.elmountahi.dev

# The public URL of the frontend application
NEXT_PUBLIC_FRONTEND_URL=https://chat.elmountahi.dev

# The public URL of the backend API (accessed by browser)
